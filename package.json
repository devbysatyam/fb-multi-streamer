{
  "name": "fb-streamer-app",
  "private": true,
  "version": "0.1.6",
  "description": "Facebook Multi-Page Bulk Live Streamer",
  "author": "Satyam Mishra",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "postinstall": "electron-builder install-app-deps",
    "package": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "make": "npm run build && electron-builder --windows",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@tailwindcss/postcss": "^4.1.18",
    "axios": "^1.13.4",
    "class-variance-authority": "^0.7.1",
    "date-fns": "^4.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "systeminformation": "^5.30.7",
    "uuid": "^13.0.0",
    "better-sqlite3": "^12.6.2",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "clsx": "^2.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "lucide-react": "^0.563.0",
    "postcss": "^8.5.6",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "zustand": "^5.0.11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devbysatyam/fb-multi-streamer.git"
  },
  "keywords": [
    "facebook",
    "live-streaming",
    "electron",
    "bulk-streaming",
    "ffmpeg",
    "gpu-acceleration"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devbysatyam/fb-multi-streamer/issues"
  },
  "homepage": "https://github.com/devbysatyam/fb-multi-streamer#readme",
  "build": {
    "appId": "com.fbstreamer.app",
    "productName": "FB Multi Streamer",
    "copyright": "Copyright 2026 Satyam Mishra",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist",
      "dist-electron",
      "package.json"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "icon": "public/app-logo.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "extraResources": []
  }
}